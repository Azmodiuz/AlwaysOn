<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?dialogPreferredPadding"
        android:text="@string/setup_choose_mode"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?dialogPreferredPadding"
        android:text="@string/setup_choose_mode_summary"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="?dialogPreferredPadding"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/device_admin_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/setup_device_admin" />

        <RadioButton
            android:id="@+id/root_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setup_root" />

    </RadioGroup>

    <ImageView
        android:layout_width="@dimen/setup_icon_size"
        android:layout_height="match_parent"
        android:layout_marginBottom="?dialogPreferredPadding"
        android:layout_gravity="center"
        android:contentDescription="@null"
        app:srcCompat="@drawable/ic_mode" />
</LinearLayout>