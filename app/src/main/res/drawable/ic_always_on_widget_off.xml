<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:height="@dimen/icon_size"
        android:width="@dimen/icon_size">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_always_on_black"
        android:top="@dimen/icon_margin"
        android:left="@dimen/icon_margin"
        android:bottom="@dimen/icon_margin"
        android:right="@dimen/icon_margin"/>
    <item
        android:gravity="bottom|right"
        android:width="@dimen/dot_size"
        android:height="@dimen/dot_size">
        <shape android:shape="oval">
            <solid android:color="@color/off" />
        </shape>
    </item>
</layer-list>