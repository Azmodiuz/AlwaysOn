<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SetupTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="android:windowLightStatusBar">false</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="dialogCornerRadius">@dimen/common_corner_radius</item>
        <item name="alertDialogTheme">@style/DialogThemeDark</item>
        <item name="dialogTheme">@style/DialogThemeDark</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        <item name="android:listDivider">@null</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarTheme">@style/ActionBarTheme</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="dialogCornerRadius">@dimen/common_corner_radius</item>
        <item name="alertDialogTheme">@style/DialogThemeLight</item>
        <item name="dialogTheme">@style/DialogThemeLight</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:listDivider">@null</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
    </style>

    <style name="AppThemeSplash" parent="AppThemeScreenOff">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
    </style>

    <style name="DialogThemeLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:backgroundDimAmount">.32</item>
    </style>

    <style name="DialogThemeDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="dialogCornerRadius">@dimen/common_corner_radius</item>
        <item name="android:backgroundDimAmount">.32</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="dialogCornerRadius">@dimen/common_corner_radius</item>
        <item name="android:backgroundDimAmount">.32</item>
    </style>

    <style name="AppThemeScreenOff" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/NoWindowTransition</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="NoWindowTransition">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="CutoutHide">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">never</item>
    </style>

    <style name="CutoutIgnore">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="28">shortEdges</item>
    </style>
</resources>
